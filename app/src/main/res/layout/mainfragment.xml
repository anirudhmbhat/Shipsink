            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/zero"
             
            android:layout_weight="1"
            android:background="@null" />

